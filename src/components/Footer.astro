---
import '../styles/components/_footer.scss';
import logoSVG from '../assets/logo.svg';

const {
  brandName = 'Malaya Web',
  year = new Date().getFullYear(),
} = Astro.props as {
  brandName?: string;
  year?: number;
};
---
<footer class="mw-footer" role="contentinfo">
  <div class="mw-footer__inner container max-w-7xl mx-auto px-6">
    <div class="mw-footer__left">
      <img
        src={logoSVG.src}
        alt="logo"
        width="24"
        height="24"
        class="mw-footer__logo"
        loading="lazy"
        decoding="async"
        fetchpriority="low"
      />
      <span class="mw-footer__brand">{brandName}</span>
    </div>
    <div class="mw-footer__right">
      <span class="mw-footer__copy">Â© {year} {brandName}. Todos los derechos reservados.</span>
    </div>
  </div>
</footer>
